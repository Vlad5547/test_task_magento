<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <style>
        .owl-carousel .item {
            position: relative;
            padding: 20px;
            background: #4a90e2;
            color: white;
            border-radius: 3px;
            text-align: center;
        }
        img {
            width: 100%;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div class="owl-carousel owl-theme">
        <div class="item">
            <img src="https://images.pexels.com/photos/674010/pexels-photo-674010.jpeg" alt="Nature 1" />
        </div>
        <div class="item">
            <img src="https://images.pexels.com/photos/192787/pexels-photo-192787.jpeg" alt="Nature 2" />
        </div>
        <div class="item">
            <img src="https://images.pexels.com/photos/459225/pexels-photo-459225.jpeg" alt="Nature 3" />
        </div>
        <div class="item">
            <img src="https://images.pexels.com/photos/276517/pexels-photo-276517.jpeg" alt="Nature 5" />
        </div>
    </div>

    <script>
        $(document).ready(function(){
            $(".owl-carousel").owlCarousel({
                items: 4,
                loop: true,
                margin: 10,
                responsive: {
                    0: {
                        items: 2
                    },
                    600: {
                        items: 2
                    },
                    1000: {
                        items: 4
                    }
                }
            });
        });
    </script>
</body>
</html>
