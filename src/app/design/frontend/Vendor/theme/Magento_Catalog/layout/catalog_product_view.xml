<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        
        <!-- Создаем контейнер-обертку для размещения двух блоков рядом -->
        <referenceContainer name="page.top">
            <container name="custom-wrapper" htmlTag="div" htmlClass="custom-wrapper" after="breadcrumbs"/>
        </referenceContainer>
        
        <referenceContainer name="page.top">
            <container name="custom-product-info-container" htmlTag="div" htmlClass="custom-product-info" after="breadcrumbs"/>
        </referenceContainer>

        <!-- Перемещаем product.info.main в custom-wrapper, чтобы он оказался справа от custom-product-info-container -->
        <move element="product.info.main" destination="custom-wrapper" />
        <move element="custom-product-info-container" destination="custom-wrapper" />
        
        <move element="product.info.sku" destination="custom-product-info-container" />
        <move element="product.info.stock.sku" destination="custom-product-info-container" />
        <move element="page.main.title" destination="custom-product-info-container" />
        <move element="product.price.final" destination="product.info.form.options" before="product.info.qty" />

  
        <referenceBlock name="product.price.final" remove="true"/>

       
        <referenceBlock name="product.info.details">
            <block class="Magento\Cms\Block\Block" name="product.custom.info" group="detailed_info">
                <arguments>
                    <argument translate="true" name="title" xsi:type="string">Custom tab(Slider)</argument>
                    <argument name="sort_order" xsi:type="string">40</argument>
                    <argument name="block_id" xsi:type="string">popup_with_slider</argument>
                </arguments>
            </block>    
        </referenceBlock>

    </body>
</page>
